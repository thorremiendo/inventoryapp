<%= form_with model: order_item, local: true, id: "order_item_form", class: "form-inline", url: order_order_items_path(order) do |f| %>
  <div class="form-group">
    <%= f.label :product %>
    <%= f.select :product_id,
                 products.map { |p| [p.name, p.id] },
                 {},
                 { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: "form-control" %>
  </div>
  <%= f.submit "Add Order Item", class: "btn btn-success" %>
<% end %>
