<%= form_with model: order, local: true, id: "new_order_form" do |f| %>
  <div class="form-group">
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :warehouse %>
    <%= f.select :warehouse_id,
                 warehouses.map { |warehouse| [warehouse.full_address, warehouse.id] },
                 {},
                 { class: "form-control" } %>
  </div>
  <%= f.submit "Save Order", class: "btn btn-success" %>
<% end %>
